doctype html
html
  head
    title Paginator
    style(type="text/css")
      | a { margin: 0 5px; color: #69f;}
  body
    table
      thead
        tr
          th ID
          th Name
          th Type
      tbody
      - each item in items.data
        tr
          td=item.id
          td=item.name
          td=item.type
    .paginator
      | 第 #{items.currentPage} 页, 
      | 共 #{items.totalPages} 页, 
      | 总计 #{items.total} 条数据. 
      a(href="?page=1") 第一页
      if items.currentPage !== 1
        a(href="?page=#{items.currentPage - 1}") 上一页
      - for(var i = items.currentPage - 2; i <= items.currentPage + 2; i++)
        if i >= 1 && i <= items.totalPages
          a(href="?page=#{i}")=i
      if items.currentPage !== items.totalPages
        a(href="?page=#{items.currentPage + 1}") 下一页
      a(href="?page=#{items.totalPages}") 最后一页
    
    script(type="text/javascript",src="/jquery/dist/jquery.min.js", data-no-instant)
    script(type="text/javascript",src="/instantclick/instantclick.js", data-no-instant)
    script(type="text/javascript", data-no-instant)
      | InstantClick.init();
